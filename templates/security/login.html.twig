{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="frame">
<div class=" form-class bg-light bg-gradient">
<form method="post" class="form-form">
    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté entant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1>Connexion</h1>
    <div class="mb-2">
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-2 bg-light form-text" autocomplete="email" required autofocus>
    </div>
    <div class="mb-2">
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control mt-2 bg-light form-text" autocomplete="current-password" required>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <div class="d-flex justify-content-between">
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me" class="check-b"> se souvenir de moi
            </label>
        </div>
     
        <a href="{{path('app_forgot_password_request')}}" class="pass-forget">mot de passe oublié</a>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">
        Se connecter
    </button>

    <p class="text-center text-muted mb-3 mt-5">Pas encore inscris? <a href=" {{ path('app_register')}}">créer un compte</a></p>
</form>
</div>
</div>
{% endblock %}
